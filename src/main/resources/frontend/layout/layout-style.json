[
  {
    "name": "基础布局",
    "english": "Basic Layout",
    "description": "使用单一分栏创建最简单的栅格布局。",
    "example": "<el-row>\n  <el-col :span=\"24\"><div class=\"grid-content bg-purple-dark\"></div></el-col>\n</el-row>"
  },
  {
    "name": "分栏间隔布局",
    "english": "Column Gutter Layout",
    "description": "网页内容被分为多个列，并在这些列之间添加一些间隔或空白，以提高可读性和视觉吸引力。",
    "example": "<el-row :gutter=\"20\">\n  <el-col :span=\"6\"><div class=\"grid-content bg-purple\"></div></el-col>\n  <el-col :span=\"6\"><div class=\"grid-content bg-purple\"></div></el-col>\n</el-row>"
  },
  {
    "name": "响应式布局",
    "english": "Responsive Layout",
    "description": "使网页能够适应不同尺寸和类型的设备，以提供一致的用户体验。",
    "example": "\n\n<el-row :gutter=\"10\">\n  <el-col :xs=\"8\" :sm=\"6\" :md=\"4\" :lg=\"3\" :xl=\"1\"><div class=\"grid-content bg-purple\"></div></el-col>\n  <el-col :xs=\"4\" :sm=\"6\" :md=\"8\" :lg=\"9\" :xl=\"11\"><div class=\"grid-content bg-purple-light\"></div></el-col>\n</el-row>"
  }
]
